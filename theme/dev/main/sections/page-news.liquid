<style>
    .section-page-news .image-text-swiper {
        background: #ffffff;
    }
    .section-page-news .events-list {
        padding-bottom: 120px;
    }
    .section-page-news .image-text-swiper {
        padding-bottom: 70px;
    }
    .section-page-news .image-text-swiper .slideshow-pagination {
        bottom: 50px;
    }
    .kol-join-block {
        background: #FFFFFF;
        margin-bottom: 120px;
    }
    .kol-join-block .section-container {
        padding: 34px 40px;
        box-shadow: 0px 6px 20px 0px rgba(85,85,85,0.2);
    }
    .kol-join-title {
        margin-right: 114px;
    }
    .kol-join-block .a-button-fill {
        padding: 11px 0;
        border-radius: 40px;
        width: 300px;
    }

    @media screen and (max-width: 768px) {
        .kol-join-block {
            margin-bottom: 0;
            background: #fafafa;
        }
        .kol-join-block .section-container {
            padding: 0;
            box-shadow: none;
            flex-direction: column;
            background: #fff;
            padding: 5.3vw 0.9vw;
        }
        .kol-join-title {
            margin-right: 0;
            text-align: center;
            margin-bottom: 4.8vw;
        }
        .section-page-news .events-list {
            padding-bottom: 10vw;
        }
        .kol-join-block .a-button-fill {
            padding: 1.6vw 0;
            border-radius: 40px;
            width: 40vw;
        }
    }

    .pdf-grid {
        margin-top: 100px;
        background: #fff;
        padding: 120px 0;
    }
    .pdf-grid-container {
        --hide: 99;
    }
    .pdf-grid-btn:checked+.pdf-grid-container {
        --hide: 0;
    }
    .pdf-grid-container {
        display: grid;
        flex-wrap: wrap;
        grid-template-columns: repeat(4,1fr);
        grid-template-rows: repeat(2, minmax(0, 1fr)) repeat(var(--hide), minmax(0, 0));
        overflow: hidden;
    }
    .pdf-grid-item {
        background: #999;
        margin: 10px;
        padding: 60px 25px;
        display: flex;
        flex-direction: column;
        align-items: center;
        box-shadow: 0px 6px 20px 0px rgba(85,85,85,0);
        transition: all .3s ease;
    }
    .pdf-grid-item:hover {
        transform: scale(1.02);
        box-shadow: 0px 6px 20px 0px rgba(85,85,85,0.3);
    }

    .pdf-grid-item .jackery-icon-pdf {
        width: 96px;
        height: 96px;
        font-size: 96px;
        color: var(--primary-color);
        display: inline-block;
    }
    .pdf-card-title {
        margin: 22px 0;
        font-weight: 500;
    }
    .pdf-grid-item .a-button-fill {
        padding-top: 8px;
        padding-bottom: 8px;
    }
    @media screen and (max-width: 768px) {
        .pdf-grid {
            padding: 14vw 0;
        }
        .pdf-grid-container {
            --hide: 99;
        }
        .pdf-grid-btn:checked+.pdf-grid-container {
            --hide: 0;
        }
        .pdf-grid-container {
            grid-template-columns: repeat(2,1fr);
            max-width: 85vw;
            grid-template-rows: repeat(2, minmax(0, 1fr)) repeat(var(--hide), minmax(0, 0));
            overflow: hidden;
        }
        .pdf-grid-item {
            margin: 0 2vw 4vw 0;
            padding: 6.6vw 2.6vw 3.7vw 2.6vw;
        }
        .pdf-grid-item:nth-child(2n) {
            margin-left: 2vw;
            margin-right: 0;
        }
        .pdf-grid-item:hover {
            transform: scale(1);
            box-shadow: none;
        }
        .pdf-grid-item .jackery-icon-pdf {
            width: 12vw;
            height: 12vw;
            font-size: 12vw;
            color: #333;
        }
        .pdf-card-title {
            margin: 2.9vw 0 4vw 0;
        }
        .pdf-grid-item .a-button-fill {
            padding: 1.6vw 0;
            width: 100%;
        }
    }
</style>

